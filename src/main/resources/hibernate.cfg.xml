<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 6.0//EN"
        "https://hibernate.org/dtd/hibernate-configuration-6.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- JDBC connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bookShop?useSSL=false&amp;serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">anna12345</property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <!-- Show SQL in console -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Automatically update the database schema -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- JDBC connection pool (optional, встроенный) -->
        <property name="hibernate.connection.pool_size">10</property>

        <!-- JPA entity scanning (Hibernate 6+) -->
        <mapping class="com.bookshop.model.User"/>
        <mapping class="com.bookshop.model.Book"/>
        <mapping class="com.bookshop.model.Media"/>
        <mapping class="com.bookshop.model.CartItem"/>
        <mapping class="com.bookshop.model.Order"/>
        <mapping class="com.bookshop.model.OrderItem"/>
        <mapping class="com.bookshop.model.Review"/>
        <mapping class="com.bookshop.model.Wishlist"/>

    </session-factory>
</hibernate-configuration>
